<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="1dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"></AbsoluteLayout>

        <TextView
            android:id="@+id/favoriteName"
            android:background="?android:selectableItemBackground"
            android:focusable="true"
            android:clickable="true"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:hint="TestText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:id="@+id/favoriteDescription"
            android:layout_below="@id/favoriteName"
            android:background="?android:selectableItemBackground"
            android:focusable="true"
            android:clickable="true"
            android:paddingLeft="15dp"
            android:paddingTop="1dp"
            android:hint="TestText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#4a4a4a"
            />
        <ImageView
            android:layout_below="@id/favoriteDescription"
            android:id="@+id/favoriteWindDirectionImage"
            android:paddingLeft="15dp"
            android:paddingTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/favoriteWindDirection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/favoriteDescription"
            android:layout_toRightOf="@id/favoriteWindDirectionImage"
            android:paddingTop="44dp"
            android:paddingLeft="5dp"
            android:textColor="#4a4a4a"
            android:textSize="25dp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>