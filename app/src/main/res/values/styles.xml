<resources>

    <!-- Making custom menu design, inspiret by: http://scriptedpapers.com/2015/02/12/android-action-bar-and-overflow-menu-customization-with-theme-appcompat/-->
    <style name="AppTheme" parent="android:Theme.Material">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:dropDownListViewStyle">@style/MyDropdown</item>
        <item name="android:textColor">#000</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="android:Widget.Material.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="MyDropdown" parent="android:Widget.Material.ListView.DropDown">
        <item name="android:background">@color/actionBarTitleColor</item>
        <item name="android:divider">@color/bg</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
</resources>
